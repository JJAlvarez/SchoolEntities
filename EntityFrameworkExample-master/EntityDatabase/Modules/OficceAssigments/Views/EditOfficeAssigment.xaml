<Window x:Class="EditOfficeAssigment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Office Assignment" Width="300" Height="338.346">
    <Grid>

        <Label Content="Location:" HorizontalAlignment="Left" Margin="26,114,0,0" VerticalAlignment="Top"/>
        <Label Content="Instructor:" HorizontalAlignment="Left" Margin="26,44,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Personas}" DisplayMemberPath="FirstName" SelectedValue="{Binding Persona}" HorizontalAlignment="Left" Margin="111,48,0,0" VerticalAlignment="Top" Width="162"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="111,114,0,0" TextWrapping="Wrap" Text="{Binding Location}" VerticalAlignment="Top" Width="162"/>
        <Button Command="{Binding ButtonAgregar}" Content="Aceptar" HorizontalAlignment="Left" Margin="176,204,0,0" VerticalAlignment="Top" Width="97" Height="39"/>

    </Grid>
</Window>
