<Window x:Class="EditDepartment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="403.759" Width="339.474" Title="Department">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="26,70,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="111,70,0,0" TextWrapping="Wrap" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="162"/>
        <Label Content="Budget:" HorizontalAlignment="Left" Margin="26,124,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="111,124,0,0" TextWrapping="Wrap" Text="{Binding Budget, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="162"/>
        <Button Command="{Binding ButtonAgregar}" Content="Aceptar" HorizontalAlignment="Left" Margin="176,211,0,0" VerticalAlignment="Top" Width="97" Height="39"/>

    </Grid>
</Window>
