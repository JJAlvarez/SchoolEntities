<Window x:Class="Modules.StudentGrades.Views.EditStudentGrades"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Student Grades" Width="300" Height="338.346">
    <Grid>

        <Label Content="Student:" HorizontalAlignment="Left" Margin="26,114,0,0" VerticalAlignment="Top"/>
        <Label Content="Course:" HorizontalAlignment="Left" Margin="26,44,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Cursos}" SelectedValue="{Binding Curso}" DisplayMemberPath="Title" HorizontalAlignment="Left" Margin="111,48,0,0" VerticalAlignment="Top" Width="162"/>
        <ComboBox ItemsSource="{Binding Persons}" SelectedValue="{Binding Person}" DisplayMemberPath="FirstName" HorizontalAlignment="Left" Margin="111,118,0,0" VerticalAlignment="Top" Width="162"/>
        <Label Content="Grade:" HorizontalAlignment="Left" Margin="26,170,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="111,170,0,0" TextWrapping="Wrap" Text="{Binding Grade}" VerticalAlignment="Top" Width="162"/>
        <Button Command="{Binding Aceptar}" Content="Aceptar" HorizontalAlignment="Left" Margin="176,240,0,0" VerticalAlignment="Top" Width="97" Height="39"/>

    </Grid>
</Window>
